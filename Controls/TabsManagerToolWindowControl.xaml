                                                                 CommandParameter="{Binding FullName}"
                                                                 Content="✖"
                                                                 />
                                                     </StackPanel>
                                                 </localControls:DocumentItemControl.ControlContent>
                                             </localControls:DocumentItemControl>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Border Background="Transparent" Height="5"></Border>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
