<UserControl x:Class="TabsManagerExtension.Controls.VirtualPopupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="PopupControl"
             Width="200">
    <Popup x:Name="PopupElement" 
           Placement="Absolute"
           StaysOpen="True"
           AllowsTransparency="True"
           PopupAnimation="Fade"
           IsOpen="False">
        <Border Background="LightGray" Padding="10" CornerRadius="5"
                MouseEnter="PopupContent_MouseEnter"
                MouseLeave="PopupContent_MouseLeave">
            <StackPanel>
                <!-- Привязка к свойству DocumentName через Binding -->
                <TextBlock Text="{Binding DocumentName, ElementName=PopupControl}" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Foreground="Black"/>
                <Separator Margin="0,5"/>
                <ContentPresenter Content="{Binding PopupContent, ElementName=PopupControl}"/>
            </StackPanel>
        </Border>
    </Popup>
</UserControl>
