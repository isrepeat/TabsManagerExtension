            <StackPanel>
                <StackPanel Visibility="{Binding PreviewDocuments.Count, 
                                         Converter={StaticResource MultiConditionVisibilityConverter}, 
                                         ConverterParameter='=0:Collapsed;>0:Visible'}"
                            >
                    <TextBlock Margin="0,5"
                               FontSize="12"
                               FontWeight="Normal"
                               Text="Предварительный просмотр"
                               />
                    <ListBox ItemsSource="{Binding PreviewDocuments}"
                             Style="{StaticResource CustomListBoxStyle}"
                             ItemContainerStyle="{StaticResource CustomListBoxItemStyle}"
                             HorizontalContentAlignment="Stretch"
                             SelectionChanged="DocumentList_SelectionChanged"
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <localControls:DocumentItemControl Title="{Binding Name}">
                                     <localControls:DocumentItemControl.ControlContent>
                                         <StackPanel Orientation="Horizontal">
                                             <Button Style="{StaticResource DarkPopupButtonStyle2}"
                                                     Click="KeepDocumentOpen_Click"
                                                     CommandParameter="{Binding FullName}"
                                                     Content="📂"
                                                     />
                                             <Button Style="{StaticResource DarkPopupButtonStyle2}"
                                                     MouseEnter="InteractiveArea_MouseEnter"
                                                     MouseLeave="InteractiveArea_MouseLeave"
                                                     Click="CloseDocument_Click"
                                                     CommandParameter="{Binding FullName}"
                                                     Content="✖"
                                                     />
                                         </StackPanel>
                                     </localControls:DocumentItemControl.ControlContent>
                                 </localControls:DocumentItemControl>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Separator Margin="0,10"/>
                </StackPanel>

                <ItemsControl ItemsSource="{Binding GroupedTabItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock FontSize="12"
                                           FontWeight="Normal"
                                           Foreground="#aaaaaa"
                                           Text="{Binding Name}"
                                           />
                                <ListBox ItemsSource="{Binding Items}"
                                         Style="{StaticResource CustomListBoxStyle}"
                                         ItemContainerStyle="{StaticResource CustomListBoxItemStyle}"
                                         HorizontalContentAlignment="Stretch"
                                         SelectionChanged="DocumentList_SelectionChanged"
                                         >
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <localControls:DocumentItemControl Title="{Binding Name}">
                                                 <localControls:DocumentItemControl.ControlContent>
                                                     <StackPanel Orientation="Horizontal">
                                                         <Button Style="{StaticResource DarkPopupButtonStyle2}"
                                                                 Click="PinDocument_Click"
                                                                 CommandParameter="{Binding FullName}"
                                                                 Content="📌"
                                                                 />
                                                         <Button Style="{StaticResource DarkPopupButtonStyle2}"
