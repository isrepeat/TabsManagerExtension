    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TabsManagerExtension;component/Styles/StyleResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <localConverters:MultiConditionVisibilityConverter x:Key="MultiConditionVisibilityConverter"/>

            <Style x:Key="CustomListBoxStyle" TargetType="ListBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
            <Style x:Key="CustomScaleSelectorControlStyle" TargetType="localControls:ScaleSelectorControl">
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <!-- Контейнер с документами -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto"
                      >
            <Grid x:Name="DocumentContainer">
                <Grid.LayoutTransform>
                    <ScaleTransform x:Name="DocumentScaleTransform" ScaleX="1.0" ScaleY="1.0" />
                </Grid.LayoutTransform>


                <ListBox Margin="10"
                         Style="{StaticResource CustomListBoxStyle}"
                         ItemContainerStyle="{StaticResource CustomListBoxItemStyle}"
                         HorizontalContentAlignment="Stretch"
                         >
                    <ListBoxItem>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Text="Document 1" />

                            <Grid Grid.Column="1" HorizontalAlignment="Right">
                                <Border Background="Transparent"
                                        MouseEnter="InteractiveArea_MouseEnter"
                                        MouseLeave="InteractiveArea_MouseLeave">
                                    <TextBlock Text="🖱️ Наведите на меня" />
                                </Border>
                            </Grid>
                        </Grid>
                    </ListBoxItem>

                    <ListBoxItem>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Text="Document 2" />

                            <Grid Grid.Column="1" HorizontalAlignment="Right">
                                <Border Background="Transparent"
                                        MouseEnter="InteractiveArea_MouseEnter"
                                        MouseLeave="InteractiveArea_MouseLeave">
                                    <TextBlock Text="🖱️ Наведите на меня" />
                                </Border>
                            </Grid>
                        </Grid>
                    </ListBoxItem>
                </ListBox>


                <!-- VirtualPopupControl с настраиваемым контентом -->
                <localControls:VirtualPopupControl x:Name="MyVirtualPopup">
                    <localControls:VirtualPopupControl.PopupContent>
                        <StackPanel>
                            <TextBlock Text="Этот контент настраиваемый!" FontWeight="Bold"/>
                            <Button Content="📂 Открыть проект"/>
                            <Button Content="📌 Закрепить"/>
                            <Button Content="✖ Закрыть"/>
                        </StackPanel>
                    </localControls:VirtualPopupControl.PopupContent>
