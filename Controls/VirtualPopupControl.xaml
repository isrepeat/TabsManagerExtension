<UserControl x:Class="TabsManagerExtension.Controls.VirtualPopupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             x:Name="PopupControl"
             Width="200"
             >
    <Popup x:Name="PopupElement" 
           IsOpen="False"
           Placement="Absolute"
           StaysOpen="True"
           PopupAnimation="Fade"
           AllowsTransparency="True"
           >
        <Border x:Name="PopupBorder"
                Padding="0,10,0,10"
                Opacity="{Binding PopupOpacity, ElementName=PopupControl}"
                Background="#2E2E2E"
                CornerRadius="5"
                MouseEnter="PopupContent_MouseEnter"
                MouseLeave="PopupContent_MouseLeave"
                >
            <StackPanel>
                <Border Padding="10,0,10,0">
                    <StackPanel>
                        <TextBlock Text="{Binding DocumentName, ElementName=PopupControl}"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="#dddddd"/>
                    </StackPanel>
                </Border>
                <ContentPresenter Content="{Binding PopupContent, ElementName=PopupControl}"/>
            </StackPanel>
        </Border>
    </Popup>
</UserControl>
